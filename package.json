{
  "name": "lumina-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:init": "turbo run db:init",
    "clean": "turbo run clean",
    "dev:web": "turbo run dev --filter=lumina-web",
    "dev:api": "turbo run dev --filter=lumina-api",
    "dev:worker": "turbo run dev --filter=lumina-worker",
    "dev:all": "turbo run dev"
  },
  "devDependencies": {
    "turbo": "^2.8.10",
    "typescript": "^5.3.0",
    "prettier": "^3.0.0",
    "eslint": "^8.50.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}